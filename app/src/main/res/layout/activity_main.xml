<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="@drawable/linear_gradient"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/display_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="0"
        android:textSize="48dp"
        android:textColor="#424242"

        android:gravity="center_vertical|end"
        android:layout_weight="0.4"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="3">

        <Button
            android:layout_width="260dp"
            android:layout_height="70dp"
            android:textSize="26dp"
            android:textColor="#19acff"
            android:background="@drawable/button_bg_clr"
            android:text="Clear"
            android:onClick="onClear"
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="26dp"
            android:textColor="@color/white"
            android:background="@drawable/button_bg_operators"
            android:text="/"
            android:onClick="onOperator"
            />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.02"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textSize="26dp"
                android:textColor="@color/white"
                android:background="@drawable/button_bg"
                android:text="7"
                android:onClick="onDigitClick"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textSize="26dp"

                android:textColor="@color/white"
                android:background="@drawable/button_bg"
                android:text="8"
                android:onClick="onDigitClick"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textSize="26dp"

                android:textColor="@color/white"
                android:background="@drawable/button_bg"
                android:text="9"
                android:onClick="onDigitClick"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textSize="26dp"

                android:textColor="@color/white"
                android:background="@drawable/button_bg_operators"
                android:text="*"
                android:onClick="onOperator"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.02"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textSize="26dp"
                android:textColor="@color/white"
                android:background="@drawable/button_bg"
                android:text="4"
                android:onClick="onDigitClick"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textSize="26dp"

                android:textColor="@color/white"
                android:background="@drawable/button_bg"
                android:text="5"
                android:onClick="onDigitClick"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textSize="26dp"

                android:textColor="@color/white"
                android:background="@drawable/button_bg"
                android:text="6"
                android:onClick="onDigitClick"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textSize="26dp"

                android:textColor="@color/white"
                android:background="@drawable/button_bg_operators"
                android:text="-"
                android:onClick="onOperator"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.02"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textSize="26dp"
                android:textColor="@color/white"
                android:background="@drawable/button_bg"
                android:text="1"
                android:onClick="onDigitClick"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textSize="26dp"

                android:textColor="@color/white"
                android:background="@drawable/button_bg"
                android:text="2"
                android:onClick="onDigitClick"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textSize="26dp"

                android:textColor="@color/white"
                android:background="@drawable/button_bg"
                android:text="3"
                android:onClick="onDigitClick"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textSize="26dp"

                android:textColor="@color/white"
                android:background="@drawable/button_bg_operators"
                android:text="+"
                android:onClick="onOperator"
                />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.02"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="2">

            <Button
                android:layout_width="165dp"
                android:layout_height="70dp"
                android:textSize="26dp"
                android:textColor="@color/white"
                android:background="@drawable/button_bg"
                android:text="0"
                android:onClick="onDigitClick"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textSize="26dp"

                android:textColor="@color/white"
                android:background="@drawable/button_bg"
                android:text="."
                android:onClick="onDecimalButton"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textSize="26dp"

                android:textColor="@color/white"
                android:background="@drawable/button_bg_equals"
                android:text="="
                android:onClick="onEqual"
                />

        </LinearLayout>



    </LinearLayout>



</LinearLayout>